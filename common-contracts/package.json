{
    "name": "@cartesi/example-contracts",
    "version": "0.0.1",
    "description": "Several contracts meant to be used for testing the DApps withing this repository",
    "scripts": {
        "build": "run-s compile",
        "clean:ignored": "rimraf artifacts && rimraf cache && rimraf coverage && rimraf deployments/localhost && rimraf dist && rimraf src/types/*",
        "clean:hardhat": "hardhat clean",
        "clean": "run-s clean:hardhat clean:ignored",
        "compile": "hardhat compile",
        "copy-dts": "copyfiles -u 1 \"src/**/*.d.ts\" dist/src",
        "deploy": "run-s deploy:development",
        "deploy:testnets": "run-s deploy:arbitrum_goerli deploy:optimism_goerli deploy:sepolia",
        "deploy:mainnets": "run-s deploy:arbitrum deploy:mainnet deploy:optimism",
        "deploy:development": "hardhat deploy --network localhost",
        "deploy:arbitrum": "hardhat deploy --network arbitrum --export export/abi/arbitrum.json",
        "deploy:arbitrum_goerli": "hardhat deploy --network arbitrum_goerli --export export/abi/arbitrum_goerli.json",
        "deploy:mainnet": "hardhat deploy --network mainnet --export export/abi/mainnet.json",
        "deploy:optimism": "hardhat deploy --network optimism --export export/abi/optimism.json",
        "deploy:optimism_goerli": "hardhat deploy --network optimism_goerli --export export/abi/optimism_goerli.json",
        "deploy:sepolia": "hardhat deploy --network sepolia --export export/abi/sepolia.json",
        "export": "hardhat export-artifacts export/artifacts --hide-sources --including-empty-bytecode --including-no-public-functions",
        "info": "npm-scripts-info",
        "prepack": "run-s export tsc copy-dts",
        "prettier": "prettier --check src/**/*.ts test/**/*.ts contracts/**/*.sol",
        "start": "hardhat node",
        "test": "hardhat test",
        "test:coverage": "hardhat coverage"
    },
    "scripts-info": {
        "build": "Build contracts",
        "clean": "Clean build artifacts, including contracts local deployment information",
        "copy-dts": "Copy TypeChain type definition files to typescript output dir",
        "deploy": "Deploy contracts to local node. Requires node running on localhost:8545",
        "deploy:testnets": "Deploy contracts to all supported testnets.",
        "deploy:mainnets": "Deploy contracts to all supported mainnets.",
        "deploy:development": "Deploy contracts to local node. Requires node running on localhost:8545",
        "deploy:arbitrum": "Deploy contracts to Arbitrum mainnet.",
        "deploy:arbitrum_goerli": "Deploy contracts to Arbitrum testnet on Goerli.",
        "deploy:mainnet": "Deploy contracts to Ethereum mainnet.",
        "deploy:optimism": "Deploy contracts to Optimism mainnet.",
        "deploy:optimism_goerli": "Deploy contracts to Optimism testnet on Goerli.",
        "deploy:sepolia": "Deploy contracts to Sepolia testnet.",
        "export": "Export artifacts in a simpler format",
        "info": "Displays information about the scripts.",
        "prettier": "Check code style",
        "solhint": "Run solidity linter",
        "start": "Start hardhat node server",
        "test": "Run unit tests",
        "test:coverage": "Run test coverage report"
    },
    "dependencies": {
        "@openzeppelin/contracts": "^4.9.2"
    },
    "devDependencies": {
        "@ethersproject/abi": "^5",
        "@ethersproject/bytes": "^5",
        "@ethersproject/providers": "^5",
        "@nomicfoundation/hardhat-verify": "^1",
        "@nomiclabs/hardhat-ethers": "^2",
        "@safe-global/safe-singleton-factory": "^1",
        "@typechain/ethers-v5": "^11",
        "@typechain/hardhat": "^8",
        "@types/node": "^20",
        "@wagmi/chains": "^1.6",
        "copyfiles": "^2",
        "ethers": "^5",
        "hardhat": "^2",
        "hardhat-abi-exporter": "^2",
        "hardhat-deploy": "^0.11",
        "hardhat-gas-reporter": "^1",
        "npm-run-all": "^4",
        "npm-scripts-info": "^0.3",
        "prettier": "^3",
        "prettier-plugin-solidity": "^1.0.0-beta.19",
        "rimraf": "^5",
        "solhint": "^3",
        "solhint-plugin-prettier": "^0.0.5",
        "solidity-coverage": "^0.8",
        "ts-generator": "^0.1",
        "ts-node": "^10",
        "typechain": "^8",
        "typescript": "^5"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/cartesi/rollups-examples.git"
    },
    "keywords": [
        "cartesi"
    ],
    "files": [
        "contracts",
        "deployments/*/*.json",
        "deployments/*/.chainid",
        "dist/src/types",
        "dist/deploy/*.js",
        "export"
    ],
    "main": "./dist/src/types/index.js",
    "types": "./dist/src/types/index.d.ts",
    "author": "Victor Yves Crispim <victor.yves@cartesi.io>",
    "license": "Apache-2.0"
}
